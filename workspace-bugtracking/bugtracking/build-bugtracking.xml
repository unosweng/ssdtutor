    <target name="MainBugRepoLinuxKernel">
        <java classname="bugtracking.MainBugRepoLinuxKernel" failonerror="true" fork="yes">
            <classpath refid="run.MainBugRepo.classpath"/>
        </java>
    </target>
    <target name="MainBugRepoMozilla">
        <java classname="bugtracking.MainBugRepoMozilla" failonerror="true" fork="yes">
            <classpath refid="run.MainBugRepo.classpath"/>
        </java>
    </target>
</project>
