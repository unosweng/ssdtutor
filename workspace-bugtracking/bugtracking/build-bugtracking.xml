<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="bugtracking">
    <property environment="env"/>

	<!--<property name="ECLIPSE_HOME" value="../../../../../../../Applications/Eclipse/eclipse-rcp-2020-06/Eclipse.app/Contents/Eclipse/"/>-->
              	
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="8"/>
    <property name="source" value="8"/>
    <path id="bugtracking.classpath">
        <pathelement location="bin"/>
        <pathelement location="lib/commons-io-2.6.jar"/>
        <pathelement location="lib/htmlunit-driver-2.36.0-jar-with-dependencies.jar"/>
        <pathelement location="lib/jsoup-1.12.1.jar"/>
        <pathelement location="lib/selenium-server-standalone-3.141.59.jar"/>
        <pathelement location="lib/junit-4.13.1.jar"/>
        <pathelement location="lib/hamcrest-core-1.3.jar"/>
    </path>
    <path id="run.MainBugRepo.classpath">
        <path refid="bugtracking.classpath"/>
        <pathelement location="lib/commons-io-2.6.jar"/>
        <pathelement location="lib/htmlunit-driver-2.36.0-jar-with-dependencies.jar"/>
        <pathelement location="lib/jsoup-1.12.1.jar"/>
        <pathelement location="lib/selenium-server-standalone-3.141.59.jar"/>
        <pathelement location="lib/junit-4.13.1.jar"/>
        <pathelement location="lib/hamcrest-core-1.3.jar"/>
    </path>
    <target name="init">
        <mkdir dir="bin"/>
        <copy includeemptydirs="false" todir="bin">
            <fileset dir="src">
                <exclude name="**/*.launch"/>
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
    </target>
    <target name="clean">
        <delete dir="bin"/>
    </target>

	<target depends="clean" name="cleanall"/>
	<target depends="build-subprojects,build-project" name="build"/>
    <target name="build-subprojects"/>
    <target depends="init" name="build-project">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac debug="true" debuglevel="${debuglevel}" destdir="bin" includeantruntime="false" source="${source}" target="${target}">
            <src path="src"/>
            <classpath refid="bugtracking.classpath"/>
        </javac>
    </target>
