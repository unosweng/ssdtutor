<?xml version="1.0" encoding="UTF-8"?>
<rules id="r-javax-IvParameterSpec" class="java.crypto.spec.IvParameterSpec">
    <rule method="IvParameterSpec">
        <argument index="1" name="getBytes" searchType="equals">
            <value string="(.*?)" security="weak"/>
            <value reference="r-javax-secureRandom" security="strong"/>
        </argument>
        <argument index="2" name="offset" optional="True">
            <value int=".*\d.*" />
        </argument>
        <argument index="3" name="len" optional="True">
            <value int=".*\d.*" />
        </argument>
    </rule>    
</rules>