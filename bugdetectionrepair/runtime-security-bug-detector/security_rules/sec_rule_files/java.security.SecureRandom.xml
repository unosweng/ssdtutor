<?xml version="1.0" encoding="UTF-8"?>
<rules id="r-java-secureRandom" class="java.security.SecureRandom">
    <rule method="getInstance">
        <argument index="1" name="algorithm" searchType="equals">
            <value string="SHA1PRNG" security="strong"/>
        </argument>
        <argument index="2" name="provider">
            <value string="(.*?)" />
            <value reference="r1-javax-provider" />
        </argument>
    </rule>
    <rule method="secureRandom">
    </rule>
    <rule method="getInstanceStrong">
    </rule>
    <rule method="setSeed">
        <argument index="1" name="setSeed" searchType="equals">
            <value byte="(.*?)" security="prohibited"/>
        </argument>
    </rule>
    <rule method="nextBytes">
        <argument index="1" name="nextBytes" searchType="equals">
            <value byte="(.*?)" security="prohibited"/>
        </argument>
    </rule>
</rules>
