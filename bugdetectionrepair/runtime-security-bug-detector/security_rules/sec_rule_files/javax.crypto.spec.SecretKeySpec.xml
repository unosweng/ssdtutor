<?xml version="1.0" encoding="UTF-8"?>
<rules id="r-javax-secretKeySpec" class="javax.crypto.spec.SecretKeySpec">
    <rule method="SecretKeySpec">
        <argument index="1" name="key" searchType="equals">
            <value byte="(.*?)" security="prohibited" />
            <value reference="r-javax-secureRandom" security="strong"/>
        </argument>
        <argument index="2" name="algorithm" searchType="contains">
            <value string="AES" security="strong"/>
            <value string="DES" security="weak"/>
            <value string="DESede" security="strong"/>
            <value string="Blowfish" security="weak"/>
            <value string="RC2" security="weak"/>
            <value string="HmacSHA1" security="strong"/>
        </argument>
        <argument index="3" name="offset">
            <value int=".*\d.*" />
        </argument>
        <argument index="4" name="len">
            <value int=".*\d.*" />
        </argument>
    </rule>
</rules>
